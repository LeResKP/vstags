{
	"name": "ctags",
	"displayName": "ctags",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.51.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "ctags.searchTags",
				"title": "Search tags"
			}
		],
		"keybindings": [
			{
				"command": "ctags.searchTags",
				"key": "ctrl+t"
			}
		],
		"configuration": {
			"title": "Search tags",
			"properties": {
				"ctags.tagPath": {
					"type": "string",
					"default": "tags",
					"description": "The tags file path"
				},
				"ctags.debounceTime": {
					"type": "number",
					"default": 200,
					"description": "Debounce time during the search"
				},
				"ctags.maxNumberOfMatches": {
					"type": "number",
					"default": 50,
					"description": "Maximun number of matches"
				},
				"ctags.excludeFolders": {
					"type": "array",
					"items": "string",
					"default": [
						"node_modules"
					],
					"description": "Folders to exclude"
				},
				"ctags.ctagsCommandParams": {
					"type": "array",
					"items": "string",
					"default": [],
					"description": "Extra params to pass to the ctags command"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.51.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^12.11.7",
		"eslint": "^7.9.0",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	},
	"dependencies": {
		"fuse.js": "^6.4.3",
		"n-readlines": "^1.0.1",
		"path": "^0.12.7",
		"rxjs": "^6.6.3"
	}
}
